<div class="row">
	<div class="col-xs-3"></div>
	<div class="col-xs-9">
		<div>
			<h3 class="post_edit_title">口コミ編集</h3>
		</div>

		<div class="post_edit_item_area">
			<div class="post_edit_item_image">
				<%= image_tag @item.item_image.url %>
			</div>

			<div>
				<h4><%= @item.name %></h4>
			</div>
		</div>

		<!-- 編集内容 -->
		<%= form_with(model: @post, url: posts_update_path(:member_id => current_member, :item_id => @item.id, :id => @post.id), method: :patch, local: true) do |f| %>
			<div class="form-group">
				<%= f.label :price_status, "価格ステータス" %><br>
				<%= f.collection_radio_buttons :price_status, Post.price_statuses_i18n, :first, :last %>
			</div>

			<div class="form-group">
				<%= f.label :price, "価格（半角数字で入力）" %><br>
				<%= f.text_field :price %>　円
			</div>

			<div class="form-group">
				<%= f.label :shop_name, "主な利用店舗名（例：スーパー〇〇　××店）" %><br>
				<%= f.text_field :shop_name %>
			</div>

			<div class="form-group">
				<%= f.label :comment, "コメント（例：「いつもと比べて少し高くなったかも、、、」　「●月☆日から特売日だそうです！」）" %><br>
				<%= f.text_area :comment, size: "55x5" %>
			</div>

			<div>
				<%= f.submit "　編集する　", data: { confirm: "編集してもよろしいですか？" }, class: "btn btn-primary" %>
			</div>
		<% end %>
		<!-- 編集内容ここまで -->
	</div>
</div>