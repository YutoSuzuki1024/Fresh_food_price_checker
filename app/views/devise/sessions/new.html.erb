<div class="row">
  <div class="col-xs-3"></div>
  <div class="col-xs-9">
    <h3 class="session_new_title">会員の方はこちらからログイン</h3>

    <!-- ログイン情報入力ここから -->
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group">
        <%= f.label :email, "メールアドレス" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="form-group">
        <%= f.label :password, "パスワード" %><br />
        <%= f.password_field :password, autocomplete: "current-password" %>
      </div>

      <div class="session_new_link">
        <%= link_to "=> パスワードを忘れた方はこちら", new_member_password_path %>
      </div>

      <div class="actions">
        <%= f.submit "ログイン", class: "btn btn-primary" %>
      </div>
    <% end %>
    <!-- ログイン情報入力ここまで -->

    <h3 class="session_new_title">登録がお済みでない方</h3>
    <h4><%= link_to "こちら", new_member_registration_path %>から新規会員登録を行ってください。</h4>
  </div>
</div>
