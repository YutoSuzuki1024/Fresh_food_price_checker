<div class="row">
  <div class="col-xs-3"></div>
  <div class="col-xs-9">
    <h3 class="password_edit_title">パスワード変更</h3>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-group">
        <%= f.label :current_password, "現在のパスワード" %><br />
        <%= f.password_field :current_password, autocomplete: "current-password" %>
      </div>

      <div class="form-group">
        <%= f.label :password, "変更後のパスワード" %><br />
        <%= f.password_field :password, autocomplete: "new-password" %>
        <% if @minimum_password_length %>
          <br />
          <em><%= @minimum_password_length %> 文字以上</em>
        <% end %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, "変更後のパスワード（確認）" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="actions">
        <%= f.submit "　変更する　", class: "btn btn-primary" %>
        <%= link_to "　マイページに戻る　", :back, class: "btn btn-success" %>
      </div>
    <% end %>
  </div>
</div>